  height: 100%;
}

.vol-swiper-item {
  /* padding: 25rpx; */
  box-sizing: border-box;
}

.vol-card {
  padding: 25rpx;
  border: 1px solid #FAFAFA;
  border-radius: 5px;
  background-color: #fff;

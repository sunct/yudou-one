}

.vol-picture {
  width: 100%;
}

.vol-meta {
  padding: 10rpx 5rpx;
  font-size: 12px;
  color: #888;
}

.vol-author {
  float: right;
}

.vol-content {
  margin-top: 35rpx;
  padding: 0 5rpx;
  font-size: 16px;
  line-height: 1.4;
}

.vol-content-text {
  width: 100%;
  min-height: 240rpx;
  line-height:55rpx;
  display: inline-block;
}
.vol-makettime {
